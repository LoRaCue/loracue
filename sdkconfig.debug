# Debug build configuration - logging on UART0, commands on UART1

# Enable UART commands (same as production)
CONFIG_UART_COMMANDS_ENABLED=y

# UART command parser on UART1 (GPIO2/3) to avoid conflict with console logs
CONFIG_UART_COMMANDS_PORT_NUM=1

# Enable INFO level logging
CONFIG_LOG_DEFAULT_LEVEL_NONE=n
CONFIG_LOG_DEFAULT_LEVEL=3

# Enable verbose bootloader logging
CONFIG_BOOTLOADER_LOG_LEVEL=3

# Console/logging on UART0 (default)
CONFIG_ESP_CONSOLE_UART_DEFAULT=y
CONFIG_ESP_CONSOLE_UART_NUM=0
CONFIG_ESP_CONSOLE_UART_BAUDRATE=115200

# Enable core dump to UART
CONFIG_ESP_COREDUMP_ENABLE_TO_UART=y

