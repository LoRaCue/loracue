menu "LoRaCue Configuration"

    choice LORACUE_MODEL
        prompt "Product Model"
        default LORACUE_MODEL_ALPHA_PLUS
        help
            Select the LoRaCue product model.
            Each model has a specific hardware configuration.
        
        config LORACUE_MODEL_ALPHA
            bool "LC-Alpha (Heltec V3, 1 button)"
            select BOARD_HELTEC_V3
            select LORACUE_UI_COMPACT
            select LORACUE_BUTTON_MODE_SINGLE
            help
                Prototype model with Heltec LoRa V3 board.
                Uses single onboard button (GPIO0).
        
        config LORACUE_MODEL_ALPHA_PLUS
            bool "LC-Alpha+ (Heltec V3, 2 buttons)"
            select BOARD_HELTEC_V3
            select LORACUE_UI_COMPACT
            select LORACUE_BUTTON_MODE_DUAL
            help
                Enhanced prototype with Heltec LoRa V3 board.
                Uses two separate external buttons (prev/next).
        
        config LORACUE_MODEL_BETA
            bool "LC-Beta (LilyGO T3-S3, E-paper)"
            select BOARD_LILYGO_T3
            select LORACUE_UI_COMPACT
            select EINK_DISPLAY
            select LORACUE_BUTTON_MODE_DUAL
            help
                Compact model with LilyGO T3-S3 2.13" E-paper display.
        
        config LORACUE_MODEL_GAMMA
            bool "LC-Gamma (LilyGO T5 Pro, E-paper)"
            select BOARD_LILYGO_T5
            select LORACUE_UI_RICH
            select TOUCH_ENABLED
            select EINK_DISPLAY
            help
                Professional model with LilyGO T5 4.7" E-paper display.
                Features touch interface and rich UI.
    endchoice

    config LORACUE_MODEL_NAME
        string
        default "LC-Alpha" if LORACUE_MODEL_ALPHA
        default "LC-Alpha+" if LORACUE_MODEL_ALPHA_PLUS
        default "LC-Beta" if LORACUE_MODEL_BETA
        default "LC-Gamma" if LORACUE_MODEL_GAMMA

    # Board selection (implicit, set by model)
    config BOARD_HELTEC_V3
        bool
    
    config BOARD_LILYGO_T3
        bool

    config BOARD_LILYGO_T5
        bool

    config LORACUE_BOARD_ID
        string
        default "heltec_v3" if BOARD_HELTEC_V3
        default "lilygo_t3" if BOARD_LILYGO_T3
        default "lilygo_t5" if BOARD_LILYGO_T5

    # UI selection (implicit, set by model)
    config LORACUE_UI_COMPACT
        bool
    
    config LORACUE_UI_RICH
        bool

    # Button configuration
    config LORACUE_BUTTON_MODE_SINGLE
        bool

    config LORACUE_BUTTON_MODE_DUAL
        bool

    config LORACUE_BUTTON_GPIO
        int "Single button GPIO"
        default 0
        depends on LORACUE_BUTTON_MODE_SINGLE

    config LORACUE_BUTTON_PREV_GPIO
        int "Previous button GPIO"
        default 12
        depends on LORACUE_BUTTON_MODE_DUAL

    config LORACUE_BUTTON_NEXT_GPIO
        int "Next button GPIO"
        default 13
        depends on LORACUE_BUTTON_MODE_DUAL

    # Display configuration
    config TOUCH_ENABLED
        bool

    config EINK_DISPLAY
        bool

endmenu
