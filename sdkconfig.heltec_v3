# Board Selection

# Flash Configuration
CONFIG_ESPTOOLPY_FLASHSIZE_8MB=y

# Heltec WiFi LoRa 32 V3 - SX1262 LoRa Pin Configuration
CONFIG_LORACUE_SX126X_MISO_GPIO=11
CONFIG_LORACUE_SX126X_SCLK_GPIO=9
CONFIG_LORACUE_SX126X_MOSI_GPIO=10
CONFIG_LORACUE_SX126X_NSS_GPIO=8
CONFIG_LORACUE_SX126X_RST_GPIO=12
CONFIG_LORACUE_SX126X_BUSY_GPIO=13
CONFIG_LORACUE_SX126X_TXEN_GPIO=-1
CONFIG_LORACUE_SX126X_RXEN_GPIO=-1

# Use SPI2 (HSPI)
CONFIG_LORACUE_SX126X_SPI2_HOST=y

# LVGL Memory Optimization for 128x64 OLED
CONFIG_LV_MEM_SIZE_KILOBYTES=16

